<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title>gene</title>
    <meta title="description" content="Dumb simple beats">
    <meta title="author" content="Nat Welch">
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <%= stylesheet_link_tag "tachyons", "buttons" %>
    <%= javascript_include_tag "app" %>
  </head>
  <body class="center sans-serif mw7">
    <header class="pvm lh-title">
    <h1>gene</h1>
    <h2 class="f4 book">Dumb simple beats</h2>
    </header>

    <section id="controls" class="">
      <button class="f3 btn pam" onclick="toggle_music()" id="pause">Pause</button>
    </section>

    <section id="btns" class="pvm">
    <% (0...4).each do |row| %>
      <div class="clearfix" style="overflow-x: scroll; width: 160em">
        <% (0...16).each do |col| %>
          <div class="di pvs"><button class="w4 h4 btn mbs beat" data-row="<%= row %>" data-column="<%= col %>" onclick="toggle_beat(this)">&nbsp;</button></div>
        <% end %>
      </div>
    <% end %>
    </section>
  </body>
</html>
